#!/bin/bash

# Alias definitions.

alias py='python3'

alias cl='clear; l'

alias v='nvim'
alias vi='nvim'
alias ed='ed -p:'

alias r='ranger'

alias vga='xrandr --output LVDS-1 --off --output VGA-1 --auto'
alias hdmi='xrandr --output LVDS-1 --off --output HDMI-1 --auto'

# Sums up numbers on each line in standard input
alias count='paste -sd+ - | bc'
