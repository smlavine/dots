<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="apps-utilities-menu" label="Utilities">
  <item label="qalculate">
    <action name="Execute">
      <command>qalculate-gtk</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="thunar">
    <action name="Execute">
      <command>thunar</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="Twitch">
    <action name="Execute">
      <command>streamlink-twitch-gui</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
</menu>

<menu id="apps-office-menu" label="LibreOffice">
  <item label="Writer">
    <action name="Execute">
      <command>libreoffice --writer</command>
    </action>
  </item>
  <item label="Calc">
    <action name="Execute">
      <command>libreoffice --calc</command>
    </action>
  </item>
  <item label="Impress">
    <action name="Execute">
      <command>libreoffice --impress</command>
    </action>
  </item>
  <item label="Draw">
    <action name="Execute">
      <command>libreoffice --draw</command>
    </action>
  </item>
  <item label="LibreOffice">
    <action name="Execute">
      <command>libreoffice</command>
    </action>
  </item>
</menu>

<menu id="system-menu" label="System">
  <item label="obconf">
    <action name="Execute">
      <command>obconf</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Reload">
    <action name="Reconfigure" />
  </item>
  <item label="Manage Printers">
    <action name="Execute">
      <command>xdg-open http://localhost:631/</command>
      <startupnotify>
        <enabled>no</enabled>
        <icon>cups</icon>
      </startupnotify>
    </action>
  </item>
  <separator />
  <item label="Log Out">
    <action name="Exit">
      <prompt>yes</prompt>
    </action>
  </item>
</menu>

<menu id="root-menu" label="Openbox 3">
  <separator label="Applications" />
  <item label="firefox">
    <action name="Execute">
      <command>firefox</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="tf2">
    <action name="Execute">
      <command>tf2</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="st">
    <action name="Execute">
      <command>st</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="dmenu">
    <action name="Execute">
      <command>dmenu_run</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <item label="mypassmenu">
    <action name="Execute">
      <command>mypassmenu</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
  <menu id="apps-utilities-menu"/>
  <menu id="apps-office-menu"/>
  <separator />
  <menu id="system-menu"/>
</menu>

</openbox_menu>
